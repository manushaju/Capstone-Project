<%- include('partials/header') -%>
    
    <h1 class="alert alert-warning" <% if(!(tempData > "") ){ %> hidden <% }%>><%=tempData %></h1>
    <form action='/register' method='post' class='fluid' class="login-form">
        <div class='row'>
          <h1>REGISTER NEW USER</h1>
          <div class='col fluid-form form-floating mb-3'>
            <input type="text" class='form-control input-field' name='name' placeholder="Full Name" autofocus required>
            <input type="text" class='form-control input-field' name='addressLine1' placeholder="Address Line 1" required>
            <input type="text" class='form-control input-field' name='addressLine2' placeholder="Address Line 2" required>
            <input type="text" class='form-control input-field' name='phone' placeholder="Phone" required>
            <input type="email" class='form-control input-field' name='email' placeholder="Email ID" required>
            <input type="text" class='form-control input-field' name='userName' placeholder="User Name" required>
            <input type="password" class='form-control input-field register-passwords' name='password' placeholder="Password" required>
            <input type="password" class='form-control input-field register-passwords' name='repassword' placeholder="Reenter Password" required>
            <button class="btn btn-lg btn-dark col-md-3"' id="register-btn" type="submit">Register</button>
          </div>
        </div>
    </form>
<%- include('partials/footer') -%>